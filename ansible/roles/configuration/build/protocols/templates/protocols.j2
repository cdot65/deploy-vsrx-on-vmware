{# Protocols                                                                           #}
{# ---------------------------------------------------------------------------------- -#}
{% if route_or_switch == "route" %}
protocols {
    bgp {
        group datacenter {
            type external;
            local-address {{ wan_ipv4_address }};
            export {{ bgp_export }};
            import {{ bgp_import }};
            peer-as 65000;
            log-updown;
            family inet {
                unicast;
            }
            neighbor {{ bgp_peer_ip }} {
                description "Data Center firewall";
            }
        }
    }
}
{% endif %}
