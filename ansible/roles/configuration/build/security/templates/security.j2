{# security                                                                            #}
{# ------------------------------------------------------------------------------------#}
security {
    application-tracking {
        log-session-close;
    }
    {% if trust_source_nat == "true" %}
    nat {
        source {
            rule-set trust_untrust {
                from zone trust;
                to zone untrust;
                rule trust_untrust_rule {
                    match {
                        source-address 0.0.0.0/0;
                        destination-address 0.0.0.0/0;
                    }
                    then {
                        source-nat {
                            interface;
                        }
                    }
                }
            }
        }
    }
    {% endif %}
    policies {
        from-zone trust to-zone untrust {
            policy permit_dmz_untrust {
                match {
                    source-address any;
                    destination-address any;
                    application any;
                }
                then {
                    permit;
                }
            }
        }
    }
    zones {
        security-zone trust {
            host-inbound-traffic {
                system-services {
                    all;
                }
                protocols {
                    all;
                }
            }
            interfaces {
                ge-0/0/1.0;
            }
        }
        security-zone untrust {
            {% if route_or_switch == "route" %}
            host-inbound-traffic {
                system-services {
                    ping;
                }
                protocols {
                    bgp;
                }
            }
            {% endif %}
            interfaces {
                ge-0/0/0.0;
            }
        }
    }
}
